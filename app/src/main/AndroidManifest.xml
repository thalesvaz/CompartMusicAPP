<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.iff.pooa20152.compartmusic">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".listaMusica"
            android:label="@string/title_activity_lista_musica"
            android:theme="@style/AppTheme" />
        <activity android:name=".menu_principal" />
        <activity android:name=".mensagens" />
        <activity android:name=".Contatos" />
        <activity android:name=".compartilhamento" />
        <activity android:name=".compartNuvem" />
        <activity android:name=".compartUser" />
        <activity android:name=".cadastroUsuario"></activity>
    </application>

</manifest>